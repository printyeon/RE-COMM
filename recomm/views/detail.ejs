<!-- detail.html -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheets/detail.css">
  <link rel="stylesheet" href="/stylesheets/nav.css">
  <title>RE:COMM</title>
  <style>

    .bbg {
  position: absolute;
  width: 400px;
  height: 520px;
  left: 570px;
  top: 130px;

  background: #ffffff;

  box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.15);
  border-radius: 13px;
}
    #modal2 {
  display: none;
}

.modal-overlay2 {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: rgba(28, 28, 28, 0.45);
  box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
  backdrop-filter: blur(1.5px);
  -webkit-backdrop-filter: blur(1.5px);
  border-radius: 10px;
  border: 1px solid rgba(255, 255, 255, 0.18);
  z-index: 99;
}
  </style>
</head>
<body>

    <!-- 내비게이션바 -->
    <div class="nav" id="nav">
        <!-- 왼쪽 로고 -->
        <div class="left">
            <a href="/">
                <div class="icon"><img src="/images/logo-logo.png" alt=""></div>
        </div>
        <!-- 오른쪽 주요 아이콘 -->
        <div class="right">
            <a href="/search">
                <div class="search"><img src="/images/logo-search.png" alt=""></div>
            </a>
            <a href="/my">
                <div class="books"><img src="/images/logo-books.png" alt=""></div>
            </a>
            <div class="log-in" onclick="openLogin()">로그인</div>
            <div class="join" onclick="openJoin()">회원가입</div>
            <div class="user" id="logout"><img src="/images/logo-user.png" alt=""></div>
        </div>
    </div>
 
    <!-- 책 정보 -->
    <div id="book-detail"></div>

    <!-- 독자들의 인상깊은 구절 -->
    <div class="reader">
        <div class="reader-impressive">
            <div class="reader-nav">
                <div class="title">
                    <p>독자들의 인상 깊었던 구절들</p>
                </div>
                <div class="write-btn" onclick="moveToNavAndReview('imphra')">작성하기</div>
            </div>
            <!-- 인상 깊은 구절 리뷰 -->
            <div class="grid-content"></div>
        </div>
        <div class="reader-impressive reader-feel">
            <div class="reader-nav">
                <div class="title">
                    <p>독자들의 느낀점들</p>
                </div>
                <div class="write-btn" onclick="moveToNavAndReview('felt')">작성하기</div>
            </div>
            <!-- 느낀점 리뷰 -->
            <div class="grid-content"></div>
        </div>
        <div class="reader-impressive reader-free">
            <div class="reader-nav">
                <div class="title">
                    <p>자유롭게 작성해 주세요</p>
                </div>
                <div class="write-btn" onclick="moveToNavAndReview('free')">작성하기</div>
            </div>
            <!-- 자유롭게 작성 리뷰 -->
            <div class="grid-content"></div>
        </div>
    </div>
    <!-- 작성하기 모달창 -->
    <div id="modal1" class="modal-overlay1">
        <div class="review">
            <div class="review-bg"></div>
            <div class="title1">독자들의 인상 깊었던 구절들</div>
            <form class="review-form">
                <input type="text" class="row" placeholder="인상 깊었던 구절을 작성해보세요">
            </form>
            <div class="btns">
                <button class="cancel" onclick="cancle()">작성 취소하기</button>
                <button class="post">리뷰 등록하기</button>
            </div>
        </div>
    </div>

    <script src="https://www.gstatic.com/firebasejs/8.10.1/firebase.js"></script>
<script src="/javascripts/nav.js"></script>



    <script src="https://www.gstatic.com/firebasejs/8.10.1/firebase.js"></script>
<script src="/javascripts/detail.js"></script>

<script src="/javascripts/main.js"></script>



</body>
</html>
